{
    "env": {
        "es6": true
    },
    "ecmaFeatures": {
        "modules": true,
        "jsx": true
    },
    "rules": {
        "brace-style": [2, "1tbs", { "allowSingleLine": true }],
        "comma-style": [2, "last"],
        "indent": [2, 4, { "indentSwitchCase": true }],
        "no-constant-condition": 2,
        "semi": [2, "always"],
        "space-after-keywords": [2, "always"],
        "space-before-blocks": [2, "always"],
        "global-strict": [2, "never"],
        "quotes": [2, "single"]
    },
    "globals": {
        "HAPPENED_LIB_ENV": false
    }
}
